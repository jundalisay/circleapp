		"eslint": "^9.38.0",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vitest": "^4.0.5",
